<Window x:Class="Belt_Conveyors_Calculator_by_Konovalov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Belt_Conveyors_Calculator_by_Konovalov"
        mc:Ignorable="d"
        Title="Belt Calculator 1.0"
        Height="500"
        Width="800"
        MinHeight="500"
        MinWidth="800"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" 
                                 StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White"
                              Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="1"
                    Grid.Column="0"
                 HorizontalAlignment="Center">
            <StackPanel
                    Orientation="Vertical" Height="325">
                <TextBlock x:Name="ProductivityOfBelt"
                       Text="Productivity, t/h"
                       Style ="{StaticResource textEnterStyle}"/>
                <TextBox 
                    x:Name="productivityValue"
                    HorizontalAlignment="Center"
                         Style="{StaticResource textBoxStyle}"
                 Text="0"
                    DataContextChanged="productivityValue_DataContextChanged" TextChanged="productivityValue_TextChanged" TextInput="productivityValue_TextInput" LostFocus="productivityValue_LostFocus"
                    />
                <TextBlock x:Name="WidthOfBelt"
                       Text="Wight of belt, mm"
                       Style ="{StaticResource textEnterStyle}"/>
                <ComboBox x:Name="widthComboBoxList"
                          Style="{StaticResource textBoxStyle}"                          
                  Grid.Column="0" 
                  Grid.Row="1" 
                  VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          HorizontalContentAlignment="Left"
                          Height="20"
                          Width="100"
                         SelectedItem="widthComboBoxList_Selected" DataContextChanged="widthComboBoxList_DataContextChanged">
                    <ComboBoxItem Content="650">
                        
                    </ComboBoxItem>
                    <ComboBoxItem Content="800">

                    </ComboBoxItem>
                    <ComboBoxItem Content="1000">

                    </ComboBoxItem>
                    <ComboBoxItem Content="1200">

                    </ComboBoxItem>
                    <ComboBoxItem Content="1400">

                    </ComboBoxItem>
                    
                </ComboBox>
                <TextBlock x:Name="LengthOfBelt"
                       Text="Length of conveyor, m"
                       Style ="{StaticResource textEnterStyle}"/>
                <TextBox HorizontalAlignment="Center"
                         Style="{StaticResource textBoxStyle}"
                 Text="0"/>
                <TextBlock x:Name="AngleOfBelt"
                       Text="Angle of conveyor, grad"
                       Style ="{StaticResource textEnterStyle}"/>
                <TextBox HorizontalAlignment="Center"
                         Style="{StaticResource textBoxStyle}"
                 Text="0"/>
                <TextBlock x:Name="DesirableSpeedOfBelt"
                       Text="Speed, m/s"
                       Style ="{StaticResource textEnterStyle}"/>
                <TextBox HorizontalAlignment="Center"
                         Style="{StaticResource textBoxStyle}"
                 Text="1.6"/>
                <Button x:Name="btnCalculate"
                        Content="Calculate"
                        Foreground="Red"
                                              
                        FontWeight="ExtraBold"
                        Width="100"
                        Height="30"
                        Margin="15"
                        Click="btnCalculate_Click"/>
            </StackPanel>
        </Viewbox>
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   x:Name="resultTextBlock"
                   Background="AliceBlue"
                   Margin="10, 22, 22, 22"
                   Text="Here will be result of calculations!"
                   FontSize="16">
        </TextBlock>

        <Menu Height="auto" Grid.ColumnSpan="2">
            <MenuItem Header="_File" 
                      Height="22"
                      FontSize="14">
                <MenuItem Command ="ApplicationCommands.Open"/>
                <MenuItem Command ="ApplicationCommands.Save"/>
                <MenuItem Command ="ApplicationCommands.Print"/>
                <Separator/>
                <MenuItem Header ="_Exit"
                          MouseEnter ="MenuItem_MouseEnter"
                          MouseLeave ="MenuItem_MouseEnter" 
                          Click ="MenuItem_Click"/>
            </MenuItem>
            <Separator Width="2"/>

            <MenuItem Header="_About"
                      Height="22"
                      FontSize="14">
                <MenuItem Header="_About me"
                          Click ="MenuItem_Click_1"/>
            </MenuItem>
        </Menu>
        <StatusBar Grid.Row="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Margin="2"
                   Background="AliceBlue">
            <StatusBarItem x:Name="statusBar_1"
                           Content="Ready, enter data please"/>            
        </StatusBar>
    </Grid>
</Window>
