<Application x:Class="Belt_Conveyors_Calculator_by_Konovalov.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Belt_Conveyors_Calculator_by_Konovalov"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="textEnterStyle">
            <Setter Property="TextBlock.FontSize" Value="12"/>
            <Setter Property="TextBlock.FontFamily" Value="Cascadia Mono"/>
            <Setter Property="TextBlock.Height" Value="15"/>
            <Setter Property="TextBlock.Margin" Value="5, 10, 5, 5"/>
            <Setter Property="TextBlock.MinWidth" Value="100"/>
            <Setter Property="TextBlock.HorizontalAlignment" Value="Center"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>            
            <Setter Property="TextBlock.Background">
                <Setter.Value >                   
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FFEAE6DF" Offset="0.467"/>
                        </LinearGradientBrush>                   
                </Setter.Value>
            </Setter>

        </Style>
    </Application.Resources>
</Application>
